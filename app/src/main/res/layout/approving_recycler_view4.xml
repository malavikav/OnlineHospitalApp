<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:layout_width="376dp"
        android:layout_height="21dp"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="22dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        tools:text="@tools:sample/full_names"
        android:id="@+id/p_name"/>

    />
    <TextView
        android:layout_width="376dp"
        android:layout_height="21dp"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="22dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        tools:text="@tools:sample/full_names"
        android:id="@+id/p_Descrption"
        android:layout_below="@id/p_name"/>

    />

    <TextView
        android:layout_width="376dp"
        android:layout_height="21dp"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:layout_marginTop="5dp"
        tools:layout_editor_absoluteX="35dp"
        android:layout_marginStart="10dp"
        tools:layout_editor_absoluteY="22dp"
        android:id="@+id/p_doctordet"
        tools:text="@tools:sample/full_names"
        android:layout_below="@+id/p_Descrption"
        />
    <TextView
        android:layout_width="376dp"
        android:layout_height="21dp"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="22dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_below="@id/p_doctordet"
        tools:text="@tools:sample/full_names"
        android:id="@+id/p_datetime"/>


    <TextView
        android:layout_width="376dp"
        android:layout_height="21dp"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="22dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        tools:text="@tools:sample/full_names"
        android:id="@+id/p_status"
        android:layout_below="@id/p_datetime"/>









</RelativeLayout>