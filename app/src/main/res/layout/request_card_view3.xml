<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardCornerRadius="@dimen/_10sdp"
    card_view:cardElevation="@dimen/_5sdp"
    android:layout_marginRight="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_10sdp"
    android:layout_marginLeft="@dimen/_10sdp"

    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp">
        <androidx.cardview.widget.CardView
            android:id="@+id/roundCardView"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_centerHorizontal="true"
            android:elevation="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_weight="0.20"
            app:cardCornerRadius="@dimen/_20sdp"
            android:layout_margin="@dimen/_5sdp">


            <ImageView
                android:id="@+id/dc_11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@string/app_name"
                android:background="@drawable/img"


                />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/content_ll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_weight="0.80"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/roundCardView"
            android:layout_margin="@dimen/_5sdp"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingRight="@dimen/_5sdp">



            <TextView
                android:id="@+id/p_rosh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/btn_color"
                android:textSize="@dimen/_18sdp"
                android:fontFamily="@font/avenirbold"
                tools:text="Patient Name:" />
            <TextView
                android:id="@+id/p_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/et_border_color"
                android:textSize="@dimen/_12sdp"
                android:paddingTop="@dimen/_5sdp"
                android:fontFamily="@font/avenirltstd_medium"
                tools:text="Patient ID:" />


            <TextView
                android:id="@+id/p_des"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/et_border_color"
                android:textSize="@dimen/_12sdp"
                android:paddingTop="@dimen/_5sdp"
                android:fontFamily="@font/avenirltstd_medium"
                tools:text="Description:" />
            <TextView
                android:id="@+id/p_dr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/et_border_color"
                android:textSize="@dimen/_12sdp"
                android:paddingTop="@dimen/_5sdp"
                android:fontFamily="@font/avenirltstd_medium"
                tools:text="Doctor Name:" />

            <TextView
                android:id="@+id/p_did"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/et_border_color"
                android:textSize="@dimen/_12sdp"
                android:paddingTop="@dimen/_5sdp"
                android:fontFamily="@font/avenirltstd_medium"
                tools:text="Doctor ID:" />


            <TextView
                android:id="@+id/p_dt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/et_border_color"
                android:textSize="@dimen/_12sdp"
                android:paddingTop="@dimen/_5sdp"
                android:fontFamily="@font/avenirltstd_medium"
                tools:text="Appointment Date:" />

            <TextView
                android:id="@+id/p_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/et_border_color"
                android:textSize="@dimen/_12sdp"
                android:paddingTop="@dimen/_5sdp"
                android:fontFamily="@font/avenirltstd_medium"
                tools:text="Appointment Time:" />

            <TextView
                android:id="@+id/p_sts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/et_border_color"
                android:textSize="@dimen/_12sdp"
                android:paddingTop="@dimen/_5sdp"
                android:fontFamily="@font/avenirltstd_medium"
                tools:text="Status:" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/c_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:background="@drawable/rounded_button"
                android:text="Approve"
                android:textAllCaps="true"
                android:gravity="center"
                android:padding="@dimen/_7sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp"
                android:fontFamily="@font/avenirbold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/content_ll" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>